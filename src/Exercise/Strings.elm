module Exercise.Strings exposing (format)

{-| Write a function that formats a string from
"elm/ is/fun /to/write!" to "ELM IS FUN TO WRITE!"

Hint:
String.toUpper
String.replace "/" " "
String.words
String.join

-}


format : String -> String
format string =
    -- Your implementation here
    String.split "/" string
        |> List.map String.trim
        |> String.join " "
        |> String.toUpper
